generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id                String     @id @default(uuid())
  roomId            String     @unique
  boardWidth        Int        @default(22)
  boardLength       Int        @default(21)
  placementZone     Int        @default(5)
  unitsCount        Int        @default(5)
  currentRound      Int        @default(0)
  currentStep       Int        @default(-5)
  status            GameStatus @default(LOBBY)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  lastActivity      DateTime   @default(now())
  appVersion        String?
  unitConfig        Json?
  terrainPercentage Int        @default(0)
  players           Player[]

  @@index([roomId])
  @@index([status, lastActivity])
}

model Player {
  id           String   @id @default(uuid())
  gameId       String
  playerNumber Int
  sessionToken String   @unique
  socketId     String?
  isReady      Boolean  @default(false)
  isAdmin      Boolean  @default(false)
  units        Json
  futureUnits  Json?
  flag         Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  rating       Int?
  game         Game     @relation(fields: [gameId], references: [id])

  @@unique([gameId, playerNumber])
  @@index([sessionToken])
  @@index([socketId])
}

enum GameStatus {
  LOBBY
  PLACEMENT
  ACTIVE
  COMPLETED
  ABANDONED
}
